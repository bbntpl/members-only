<% if (currentUser && currentUser.hasMembershipStatus) { %>
<aside class='w-full md:w-1/4 lg:w-1/5 p-4 sticky top-16'>
  <div class='bg-white shadow rounded-lg p-4 max-h-80 overflow-auto'>
    <h2 class='font-headings text-secondary mb-4'>Members</h2>
    <ul>
      <% users.slice(0, 5).forEach(user => { %>
      <li class='mb-2'>
				<a href=<%= /members/ + user.id %> class='display-inline hover:underline'>
					<span class='text-gray-700 mb-4'>
						<%= user.username.substring(0, 15) + (user.username.length > 15 ? '...' : '') %>
					</p>
					<span class='font-sm text-gray-400'>
						(<%= timeSince(new Date(user.createdAt)) %>)
					</p>
				</a>
      </li>
      <% }) %>
    </ul>
    <% if (users.length > 5) { %>
    <a href='/members' class='text-accent hover:underline'>View more members</a>
    <% } %>
  </div>
</aside>
<% } %>